{
  "name": "ampersand-schema-validator",
  "displayName": "Ampersand Schema Validator",
  "description": "Validation, completion and quick fixes for Ampersand manifest files (amp.yaml)",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "yamlValidation": [
      {
        "fileMatch": [
          "amp.yaml",
          "*.amp.yaml"
        ],
        "url": "https://raw.githubusercontent.com/amp-labs/vs-code-extension/refs/heads/main/schemas/manifest-json-schema.json"
      }
    ],
    "commands": [
      {
        "command": "ampersand-schema.generateTemplate",
        "title": "Ampersand: Generate Sample Manifest"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint && rm -f out/test/extension.test.js out/test/extension.test.js.map",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint --config eslint.config.cjs .",
    "package": "vsce package",
    "install-local": "vsce package && code --install-extension ampersand-schema-validator-*.vsix"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "~22.15.16",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.26.0",
    "glob": "^8.1.0",
    "minimatch": "^3.1.2",
    "mocha": "^11.2.2",
    "typescript": "^5.8.3"
  },
  "resolutions": {
    "minimatch": "^5.1.6",
    "glob": "^8.1.0"
  }
}