{
  "name": "ampersand-schema-validator",
  "displayName": "Ampersand Schema Validator",
  "description": "Validation, completion and quick fixes for Ampersand manifest files (amp.yaml)",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/amp-labs/vs-code-extension.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "yamlValidation": [
      {
        "fileMatch": [
          "amp.yaml",
          "*.amp.yaml"
        ],
        "url": "https://raw.githubusercontent.com/amp-labs/vs-code-extension/refs/heads/main/schemas/manifest-vscode-schema.json"
      }
    ],
    "commands": [
      {
        "command": "ampersand-schema.generateTemplate",
        "title": "Ampersand: Generate Sample Manifest"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run check && rm -f out/test/extension.test.js out/test/extension.test.js.map",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "install-local:cursor": "vsce package && cursor --install-extension ampersand-schema-validator-*.vsix",
    "install-local:vscode": "vsce package && code --install-extension ampersand-schema-validator-*.vsix",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run lint && npm run format",
    "check:ci": "npm run lint:check && npm run format:check",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": "prettier --write"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.26.0",
    "prettier": "^3.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.0.0"
  },
  "resolutions": {
    "minimatch": "^5.1.6",
    "glob": "^8.1.0"
  }
}
